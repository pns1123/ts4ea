from pydantic import BaseModel
from typing import List
from models import Explanation

class Survey(BaseModel):
    surveyId: str  # ID of the survey
    userId: str  # ID of the user initiating the survey
    explanationsToDisplay: List[Explanation]  # List of explanations to display during the survey
    questionsAnswered: int  # Number of survey questions answered
    # Add any other necessary attributes for the survey

    class Config:
        schema_extra = {
            "example": {
                "user_id": "user123",
                "explanations_to_display": [{"content": "Explanation 1"}, {"content": "Explanation 2"}],
                "questions_answered": 0
            }
        }