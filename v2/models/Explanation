from pydantic import BaseModel
from typing import Union


class Explanation(BaseModel):
    content: Union[str, bytes]  # The content of the explanation, which can be text or binary data (e.g., image)
    originalMedia: str  # Path or URL to the original media
    metadata: dict = {}  # Additional metadata associated with the explanation, set to an empty dictionary by default

    class Config:   
        schema_extra = {
            "example": {
                "content": "This is an explanation...",
                "original_media": "https://example.com/original_media.jpg"
            }
        }    
